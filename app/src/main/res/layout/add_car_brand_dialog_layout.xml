<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/car_brand_name_text_input_layout"
        style="@style/TextInputLayoutStyleOnSurface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="8dp"
        android:hint="Full Name"
        app:layout_constraintBottom_toTopOf="@id/upload_icon_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:startIconDrawable="@drawable/ic_profile_icon">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/car_brand_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_on_surface" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/upload_icon_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/color_primary"
        android:text="Upload Icon"
        app:layout_constraintEnd_toEndOf="@id/car_brand_name_text_input_layout"
        app:layout_constraintStart_toStartOf="@id/car_brand_name_text_input_layout"
        app:layout_constraintTop_toBottomOf="@id/car_brand_name_text_input_layout"
        app:layout_constraintVertical_chainStyle="packed" />


</androidx.constraintlayout.widget.ConstraintLayout>